{% extends 'base.html.twig' %}

{% block title %}Conference - {{ conference.title }}{% endblock %}

{% block body %}
    {% for message in app.flashes('notification') %}
        <div class="alert alert-info alert-dismissible fade show">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
    {% endfor %}

    <h4 class="mb-4"><b>{{ conference.title }}</b></h4>
    <p>{{ conference.body }}</p>

    <div class="row">
        <div class="col-12 col-lg-8">
            {% if comments|length > 0 %}
                <h5><b>Comments ({{ comments|length }}):</b></h5>
                {% for comment in comments %}
                    <div class="media shadow border rounded-lg p-3 mb-4">
                        <div class="comment-img mr-3">
                            {% if comment.photo %}
                                <img src="{{ comment.photo.url }}">
                            {% endif %}
                        </div>

                        <div class="media-body">
                            <h5 class="font-weight-light mb-0"><b>{{ comment.author.firstName ~ ' ' ~ comment.author.lastName }}</b></h5>

                            <div class="mb-2">
                                <small class="text-muted text-uppercase">{{ comment.created|format_datetime('medium', 'short') }}</small>
                            </div>

                            <div class="comment-text">
                                {{ comment.text|nl2br }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {% if previous >= 0 %}
                    <a href="{{ path('conferences', { slug: conference.slug, offset: previous }) }}">Previous</a>
                {% endif %}
                {% if next < comments|length %}
                    <a href="{{ path('conferences', { slug: conference.slug, offset: next }) }}">Next</a>
                {% endif %}
            {% else %}
                <div class="text-center">No comments have been posted yet for this conference.</div>
            {% endif %}
        </div>
        <div class="col-12 col-lg-4">
            <div class="bg-light shadow border rounded-lg p-4">
                <h5 class="font-weight-light"><b>Add comment:</b></h5>

                {{ form_start(commentForm) }}
                    {{ form_widget(commentForm) }}
                    <button class="btn btn-primary" type="submit">Comment</button>
                {{ form_end(commentForm) }}
            </div>
        </div>
    </div>
{% endblock %}
